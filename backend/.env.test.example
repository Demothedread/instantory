# Database Configuration
NEON_DATABASE_URL=neon://postgres:testpassword@localhost:5432/test_db
DATABASE_URL=postgresql://test_user:test_pass@localhost:5432/test_db

# OpenAI Configuration
OPENAI_API_KEY=test-key

# Storage Configuration
BLOB_READ_WRITE_TOKEN=test-token

# Authentication
JWT_SECRET=test-jwt-secret
SESSION_SECRET=test-session-secret
COOKIE_SECRET=test-cookie-secret
GOOGLE_CLIENT_ID=test-client-id
GOOGLE_CLIENT_SECRET=test-client-secret

# CORS Configuration
CORS_ENABLED=true
ALLOW_CREDENTIALS=true
CORS_ORIGIN=http://localhost:3000

# Service URLs
PUBLIC_BACKEND_URL=http://localhost:5000
FRONTEND_URL=http://localhost:3000

# Rate Limiting
RATE_LIMIT=100
RATE_WINDOW=60

# Content Settings
MAX_CONTENT_LENGTH=16777216  # 16MB
MAX_BODY_SIZE=16777216       # 16MB
LOG_REQUEST_BODY=true

# Logging
LOG_LEVEL=DEBUG
LOG_FILE=tests/test.log

# Test Configuration
TESTING=true
ENVIRONMENT=test

# File Storage Paths
DATA_DIR=tests/data
UPLOADS_DIR=tests/data/uploads
INVENTORY_IMAGES_DIR=tests/data/images/inventory
EXPORTS_DIR=tests/data/exports
DOCUMENT_DIRECTORY=tests/data/documents

# Cache Settings
CACHE_TTL=300
MAX_CACHE_SIZE=100

# Worker Configuration
WORKER_PROCESSES=2
WORKER_THREADS=4

# Test Timeouts (milliseconds)
TEST_TIMEOUT=5000
API_TIMEOUT=3000
DB_TIMEOUT=2000

# Mock Service Responses
MOCK_OPENAI_RESPONSE=true
MOCK_STORAGE_OPERATIONS=true

# Test Database Settings
TEST_DB_MIN_CONNECTIONS=1
TEST_DB_MAX_CONNECTIONS=5
TEST_DB_CONNECTION_TIMEOUT=5
TEST_DB_IDLE_TIMEOUT=10

# Test User Credentials
TEST_USER_EMAIL=test@example.com
TEST_USER_PASSWORD=test-password
TEST_USER_NAME=Test User

# Test OAuth Settings
TEST_OAUTH_TOKEN=mock-oauth-token
TEST_OAUTH_REFRESH_TOKEN=mock-refresh-token

# Test File Processing
TEST_MAX_FILE_SIZE=5242880  # 5MB
TEST_ALLOWED_EXTENSIONS=pdf,jpg,jpeg,png,doc,docx
TEST_MAX_BATCH_SIZE=10

# Test Security Settings
TEST_RATE_LIMIT=50
TEST_RATE_WINDOW=60
TEST_MAX_LOGIN_ATTEMPTS=3
TEST_LOCKOUT_DURATION=300

# Monitoring and Metrics
ENABLE_TEST_METRICS=true
METRIC_COLLECTION_INTERVAL=10

# Comments:
# 1. All secrets/keys should be different from production
# 2. Use local/mock services where possible
# 3. Keep timeouts short for faster test execution
# 4. Enable detailed logging for debugging
# 5. Use test-specific directories for file operations
# 6. Configure smaller limits than production
# 7. Mock external service calls when possible
