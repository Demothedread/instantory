# Server Configuration
PORT=5000
NODE_ENV=development

# Database URLs
DATABASE_URL=postgresql://username:password@host.render.com/dbname
NEON_DATABASE_URL=postgres://username:password@host.neon.tech/neondb

# Authentication
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
JWT_SECRET=your_jwt_secret

# CORS Settings
CORS_ORIGIN=http://localhost:3000
CORS_ENABLED=true
ALLOW_CREDENTIALS=true

# API URLs
PUBLIC_BACKEND_URL=http://localhost:5000
VERCEL_URL=http://localhost:3000

# Storage
BLOB_READ_WRITE_TOKEN=your_vercel_blob_token

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key

# Data Directories
DATA_DIR=./data
UPLOADS_DIR=./data/uploads
INVENTORY_IMAGES_DIR=./data/images/inventory
EXPORTS_DIR=./data/exports
DOCUMENT_DIRECTORY=./data/documents

# Cache Settings
CACHE_TTL=300  # 5 minutes in seconds
MAX_CACHE_SIZE=100  # Maximum number of items to cache

# Security
SESSION_SECRET=your_session_secret
COOKIE_SECRET=your_cookie_secret

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/instantory.log
